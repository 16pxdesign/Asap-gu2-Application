@model List<HealthIssueViewModel>

<table id="healthissues" class="table mt-1" data-url="@Url.Action("Index")">
    <thead>
    <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @for (var i = 0; i < Model.Count; i++)
    {
        <tr>
            <td style='display:none'><input name='Player.HealthIssue[@(i)].Index' type='hidden' value='@(i)' /></td>
            <td><input  name='Player.HealthIssue[@(i)].Data' type='hidden' value='@Model[i].Date' />@Model[i].Date.ToString("dd/MM/yyyy")</td>
            <td><input  name='Player.HealthIssue[@(i)].Name' type='hidden' value='@Model[i].Name' />@Model[i].Name</td>
            <td style='display:none'><textarea hidden  name='Player.HealthIssue[@(i)].Description' >@Model[i].Description</textarea></td>

            <!-- Buttons -->
            
            <td><button type="button" id="Player_HealthIssue[@(i)]_editBtn" class="btn btn-link" data-toggle="ajax-modal" data-target="#add-health" data-url="@Url.Action("AddHealth",new {id = i} )" ><i class="fas fa-edit"></i></button></td>
            <td><button data-deleteid="@(i)" class='btn btn-link text-danger' data-toggle="HealthDelete" data-url="@Url.Action("Delete","Index")"><i class='fas fa-trash-alt'></i></button></td>
        </tr>
    }
    </tbody>
</table>
