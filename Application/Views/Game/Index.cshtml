@model IEnumerable<GameViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="card">
    <div class="card-title text-center mt-4">
        <h4 class="">Games list</h4>
    </div>
    <div class="card-body">

        <p>
            <a asp-action="AddEdit">Add</a>
        </p>
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opposition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Result)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Date)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.KO)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Opposition)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Location)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Result)
                    </td>
                    <td>
                        <a asp-action="AddEdit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>