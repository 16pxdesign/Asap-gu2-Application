@model ScoreViewModel

<!-- Modal -->
<div class="modal fade" id="ScoreForm" tabindex="-1" role="dialog" aria-labelledby="Score" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addContactLabel">Add Score</h5> 
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                <form id="add-Score-form" asp-action="AddScore" enctype="multipart/form-data" onsubmit="event.preventDefault();">
                    
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
                    <div class="form-group">
                        <label asp-for="Id"></label>
                        <input asp-for="Id" class="form-control"/>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
      

                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal-Score">Close</button>
                <button type="button" class="btn btn-primary"  data-save="modal-Score">Save</button>
            </div>
        </div>
    </div>
</div>